<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user, url: user_path(current_user), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :name, "Name"%>
            <%= f.text_field :name, class:"form-control"  %>
          </div>
          
          <div class="form-group">
            <%= f.label :profile_image, "Image" %>
            <%= f.file_field :profile_image, accept: "image/*", class:"form-control-file" %>
          </div>
          
          
          <div class="form-group">
            <%= f.label :introduction, "Introduction" %>
            <%= f.text_area :introduction, class:"form-control" %>
          </div>
          
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</main>